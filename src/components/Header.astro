<header class="header">
  <h1 class="h1">
    <a href="#home" class="a">{"{G}"}</a>
  </h1>
  <div id="toggle-theme" class="toggle-theme">
    <span
      id="toggle-icon"
      class="toggle-theme__icon material-symbols-outlined"
    >
      toggle_on
    </span>
    <p id="toggle-text" class="toggle-theme__text">Dark Mode</p>
  </div>
 
  <label for="burger" class="burger">
    <input id="burger" type="checkbox">
    <span></span>
    <span></span>
    <span></span>
  </label>

  <nav class="nav">
    <ul class="ul">
      <li class="li"><a href="#home" class="a"> home </a></li>
      <li class="li"><a href="#about" class="a"> about </a></li>
      <li class="li"><a href="#portfolio" class="a"> portfolio </a></li>
      <li class="li"><a href="#contact" class="a"> contact </a></li>
    </ul>
  </nav>
</header>

<style>
  .header {
    background-color: transparent;
    padding-left: 2rem;
    padding-right: 2rem;
    display: flex;
    flex-flow: row wrap;
    justify-content: space-between;
    align-items: center;
    color: var(--text-color);
    position: sticky;
    top: 0;
    z-index: 1;
    color: var(--text-color-terminal);
  }

  /* boton del modo oscuro */
  .toggle-theme {
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
  }
  .toggle-theme__icon {
    margin-right: 0.5em;
    width: 20px;
  }
  .toggle-theme__text {
    font-size: 1rem;
  }

  /* nav-button */
  .burger {
    display: none;
    position: relative;
    width: 40px;
    height: 20px;
    background: transparent;
    cursor: pointer; 
  }
  .burger input {
    display: none;
  }
  .burger span {
    display: block;
    position: absolute;
    height: 2px;
    width: 100%;
    background: var(--text-color-terminal);
    border-radius: 9px;
    opacity: 1;
    left: 0;
    transform: rotate(0deg);
    transition: .25s ease-in-out;
  }
  .burger span:nth-of-type(1) {
    top: 0px;
    transform-origin: left center;
  }
  .burger span:nth-of-type(2) {
    top: 50%;
    transform: translateY(-50%);
    transform-origin: left center;
  }
  .burger span:nth-of-type(3) {
    top: 100%;
    transform-origin: left center;
    transform: translateY(-100%);
  }
  .burger input:checked ~ span:nth-of-type(1) {
    transform: rotate(45deg);
    top: 0px;
    left: 5px;
  }
  .burger input:checked ~ span:nth-of-type(2) {
    width: 0%;
    opacity: 0;
  }
  .burger input:checked ~ span:nth-of-type(3) {
    transform: rotate(-45deg);
    top: 28px;
    left: 5px;
  }

  .header .ul {
    display: flex;
    flex-flow: row nowrap;
    justify-content: flex-end;
    align-items: center;
  }
  .header .li {
    margin: 0 .5em;
  }

  @media screen and (max-width: 480px) {
    .burger {
      display: block;
    }
    .header .nav {
      width: 100vw;
      height: 0;
      pointer-events: none;
      overflow: hidden;
      transition: all .5s ease;
      display: flex;
      flex-flow: column nowrap;
      justify-content: center;
      align-items: center;
    }
    .header .nav.activo {
      height: 50vh;
      pointer-events: auto;
      background-color: var(--bg-color);
    }
    .header .ul {
      flex-direction: column;
      gap: 1rem;
    }
    .header .li {
      margin: 1rem 0;
    }
  }
</style>

